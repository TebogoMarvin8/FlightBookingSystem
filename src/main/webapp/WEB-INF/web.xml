    </context-param>
    <servlet>
        <servlet-name>FlightServlet</servlet-name>
        <servlet-class>za.co.mie.controller.FlightServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FlightServlet</servlet-name>
        <url-pattern>/FlightServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
