    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:mysql://localhost:3306</param-value>
    </context-param>
    <context-param>
        <param-name>database</param-name>
        <param-value>blueskiesairline</param-value>
    </context-param>
